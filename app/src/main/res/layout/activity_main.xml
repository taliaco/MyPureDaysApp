<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background"
    android:clickable="false">


            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton"
                android:src="@drawable/iconclear"
                android:scaleType="fitCenter"
                android:background="@drawable/iconclear"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/imageButton2"
                android:layout_alignRight="@+id/imageButton2"
                android:layout_alignEnd="@+id/imageButton2" />


            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton1"
                android:src="@drawable/button1"
                android:scaleType="fitCenter"
                android:background="@drawable/button1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="הגדרות"
                android:textSize="30dp"
               />


    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton5"
        android:src="@drawable/button5"
        android:background="@drawable/button5"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="155dp"
        android:clickable="true"
        android:text="לוח שנה"
        android:textSize="30dp"
        android:onClick="onClick_btn"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/button2"
            android:scaleType="fitCenter"
            android:background="@drawable/button2"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/imageButton1"
            android:layout_toStartOf="@+id/imageButton1"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:text="יומן מעקב"
            android:textSize="30dp" />



        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton3"
            android:src="@drawable/button3"
            android:scaleType="fitCenter"
            android:background="@drawable/button3"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignRight="@+id/imageButton1"
            android:layout_alignEnd="@+id/imageButton1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="התחל הפסק"/>

</RelativeLayout>
